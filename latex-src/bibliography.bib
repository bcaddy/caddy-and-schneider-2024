	journal = {Journal of Computational Physics},
	author = {Gardiner, Thomas A. and Stone, James M.},
	month = apr,
	year = {2008},
	note = {Publisher: Academic Press Inc.},
	keywords = {Magnetohydrodynamics, Compressible flow, Numerical methods},
	pages = {4123--4141},
}

@article{athena++_2020,
	title = {The {Athena}++ {Adaptive} {Mesh} {Refinement} {Framework}: {Design} and {Magnetohydrodynamic} {Solvers}},
	volume = {249},
	issn = {1538-4365},
