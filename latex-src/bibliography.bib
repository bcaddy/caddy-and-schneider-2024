	author = {Hopkins, Philip F and Chan, T K and Garrison-Kimmel, Shea and Ji, Suoqing and Su, Kung-Yi and Hummels, Cameron B and Kereš, Dušan and Quataert, Eliot and Faucher-Giguère, Claude-André},
	month = mar,
